//- ./views/login-form.pug

extends layout
include utils.pug

block content
    +validationErrorSummary(errors)
    form.login-form
        //- fieldset 
        legend Log In
        input(type= 'text', name='email', placeholder='email')
        input(type= 'password', name='password', placeholder='password')
        select(name='userId')
        div(class= 'login-register-buttons')
            button(type='submit', class= 'login-register') Login
            button(type= 'submit', class= 'login-register-demo') Demo User Login

    div
        p: a(href="/signup") Not in the Underflow? Sign up

    footer