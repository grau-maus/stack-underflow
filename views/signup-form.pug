extends index
include utils
block content
    +validationErrorSummary(errors)
    form(action='/signup', method='post')
        input(type= 'hidden', name='_csrf', value=csrfToken)
        +field('Display Name', 'username', 'user', users.name)
        +field('Email Address','email', email, users.email)
        +field('Password', 'password', null, users.password)
        div(class= 'login-register-buttons')
            button(type='submit', class= 'login-register') Login
            button(type= 'submit', class= 'login-register-demo') Demo User Login
    div
        p: a(href="/signup") Don't have an account? Sign up
