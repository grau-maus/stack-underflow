//- ./views/signup-form.pug

extends index
include utils.pug

block display
    +validationErrorSummary(errors)
    form(action='/signup', class='signup-form', method='post')
    
        legend Signup
        input(type='hidden' name='_csrf' value=csrfToken)
        input(type= 'text', name='username', placeholder='display name')
        input(type= 'text', name='email', placeholder='email')
        input(type= 'password', name='password', placeholder='password')
        input(type= 'password', name='confirm-password', placeholder='confirm password')
        div(class= 'login-register-buttons')
            button(type='submit', class= 'signup') Signup
    div
        p: a(href="/login") Have an account and missed ALL the login links? LOGIN

    footer
