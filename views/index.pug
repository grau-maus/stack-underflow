//- ./views/index.pug

extends layout
include utils.pug

append head
  //- add page specific styles by appending to the head
  link(rel='stylesheet' href='/stylesheets/index.css')
  //- add page specific js
  script(src="/javascripts/index.js" type="module" defer)

block content
  div(class='navbar-background')
  div(class='navbar')
    div(class='navbar-welcome-title')
      h1(class='navbar-header')= title
      p Welcome to Stack Underflow

    div(class='navbar-logo')
      img(class='navbar-logo', src='/images/logo-stackunderflow.png')

    form(action='/questions', method='post', class='search-bar-container')
      input(type='hidden', name='_csrf', value=csrfToken)
      input(class='search-bar', type='text', name='query', placeholder='üîç')
      button(type='submit', class='search-button') Search

    div(class='login-register-buttons-container')
      div(class= 'login-register-buttons')
        a(href='/login' class='login-signup-btn')
          button(type='submit' class='login-signup-button') Login
      div(class= 'login-register-buttons')
        a(href='/signup' class='login-signup-btn')
          button(type='submit' class='login-signup-button') Signup

  div(class='left-side-bar')
    a(href='/', class='left-side-bar-anchor')
      div(class='left-side-bar-text homepage') Homepage
    a(href='http://github.com', class='left-side-bar-anchor')
      div(class='left-side-bar-text github') Find the underverse

  block display
